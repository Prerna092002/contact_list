<html>
    <head>
        <title>
            <%= locals.title %>
        </title>
        <link rel="stylesheet" href="/css/home.css">
        <script src="https://kit.fontawesome.com/4bc5823ea1.js" crossorigin="anonymous"></script>
    </head>
    <body>
       <h1 id="page-heading">
         <i class="fas fa-address-book"></i> 
        My Contacts List</h1>
       <div id="contacts-list-container">
        <ul>
            <% for (let i of contact_list) { %>
                <li class="contact">
                    <div class="details">
                    <p><%= i.name %> </p>
                    <p><%= i.phone %> </p>
                </div>
                <div class="delete-button">
                    <a href="/delete-contact/?id=<%= i._id %>"><i class="fas fa-window-close"></i></a>
                </div>
                </li>
                <% } %>
        </ul>
       </div>
       <form action="/create-contact" method="POST" id="form"> 
         <input type="text" name="name" placeholder="Enter your name" required>
         <input type="number" name="phone" placeholder="Enter your phone no" required>
         <button type="submit" id="btn">Add</button>
       </form>
       <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>